      </video>
  
    <div class="index-header-div"></div>
    <h1>All planets</h1>
    
    <nav>
        <ul>
            <li>
                <a class="add-planet"href="/planets/new" > Add new Planet</a>
            </li>
        </ul>
    </nav>
</div>
    <ul>
      <% planets.forEach(planet => { %>
        <li>
            <a class = "planet-cards" href="/planets/<%= planet._id %>"> 
                <%= planet.name %>
            </a>
              <!-- index.ejs planets -->
              <a class="planets-index-link" href="/planets">Planets</a>

            </li>
      <% }); %>
    </ul>
