<!-- views/planets/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= planet.name %></title> <!-- Dynamic title based on planet name -->
    <link rel="stylesheet" href="/style/style.css" />
    <script src="/script.js"></script>
  </head>
 <!-- views/planets/show.ejs -->

<body>
      <!-- Video Background -->
      <video id="background-video" autoplay muted loop playsinline>
        <source src="/videos/solar.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
  
    <div class = "planet-details">
    <h1 class = "card-name"><%= planet.name %></h1>
    <nav>
        <ul>
            <li>
                <a href="/planets"> Back to planets</a>
            </li>
        </ul>
    </nav>
  <!-- Display planet image -->
<img src="<%= planet.image %>" alt="<%= planet.name %>" class="planet-image" />
<!-- Display planet description -->
<p><%= planet.description %></p>

    <!-- Conditional rendering based on planet's readiness -->
    <% if (planet.isReadyToObserve) { %>
      <p>This planet is ready to observe!</p>
    <% } else { %>
      <p>This planet is not ready to observe!</p>
    <% } %>

    <!--DELETE-->
    <div class="planet-actions">
    <form action="/planets/<%=planet._id%>?_method=DELETE" method="POST">
        <button class="delete-button" type="submit">Delete <%= planet.name %></button>
      </form>
      <a class="edit-link" href="/planets/<%= planet._id %>/edit">Edit <%= planet.name %></a>
    </div>
</div>
 <a class="planets-index-link" href="/planets">
    <div class="index-link-text">Back to planets</div>
  </a>
 
  </body>
  
</html>
